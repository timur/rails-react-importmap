<% case as %>
<% when :link %>
 <%= link_to href, class: button_classes, data: data do %>
    <%= text %>
  <% end %>
<% when :button %>
  <%= button_tag class: button_classes, data: data do %>
    <% if defined? optional %>
      <% if optional[:trailing]%>
        <%= optional[:label] %>
      <% end %>
    <% end %>
    <%= text %>
    <% if defined? optional %>
      <% unless optional[:trailing]%>
        <%= optional[:label] %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
