<div class="relative flex items-start">
  <div class="flex h-6 items-center">
    <%= check_box_tag name, checkbox_value, checked, id: id, class: input_classes, required: options[:required] %>
  </div>
  <div class="ml-3 text-sm leading-6">
    <label for="<%= id %>" class="font-medium text-gray-900 <%= options[:has_error] ? 'text-red-600' : '' %>"><%= label %></label>
    <span class="text-gray-500 <%= options[:has_error] ? 'text-red-600' : '' %>"><span class="sr-only"><%= label %> </span><%= options[:hint] %></span>
  </div>
</div>
<% if options[:has_error] %>
  <p class="ml-7 mt-1 text-sm text-red-600">
    <% options[:errors].each do |error| %>
      <%= error %>
    <% end %>
  </p>
<% end %>