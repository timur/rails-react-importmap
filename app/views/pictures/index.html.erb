<%= content_tag :div,
  id: "photos",
  data: @photos do %>
<% end %>

<div id="root"></div>


<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Pictures</h1>
    <%= link_to 'New picture', new_picture_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="pictures" class="min-w-full">
    <%= render @pictures %>
  </div>
</div>
