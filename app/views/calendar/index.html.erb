<div>
  <div class="mx-auto grid max-w-3xl grid-cols-1 gap-x-8 gap-y-16 px-4 sm:grid-cols-2 sm:px-6 xl:max-w-none xl:grid-cols-3 xl:px-8 2xl:grid-cols-4">
    <section class="text-center">
      <h2 class="text-sm font-semibold text-gray-900"><%= I18n.l(@date, format: "%B") %></h2>
      <div class="mt-6 grid grid-cols-7 text-xs leading-6 text-gray-500">
        <div><%= t('date.abbr_day_names')[1] %></div>
        <div><%= t('date.abbr_day_names')[2] %></div>
        <div><%= t('date.abbr_day_names')[3] %></div>
        <div><%= t('date.abbr_day_names')[4] %></div>
        <div><%= t('date.abbr_day_names')[5] %></div>
        <div><%= t('date.abbr_day_names')[6] %></div>
        <div><%= t('date.abbr_day_names')[0] %></div>
      </div>
      <div class="isolate mt-2 grid grid-cols-7 gap-px rounded-lg bg-gray-200 text-sm shadow ring-1 ring-gray-200">
        <% @date_range.each_slice(7).with_index do |week, i| %>
          <% week.each do |day| %>
            <%= content_tag :button, class: year_view_classes(@date, day) do %>
              <%= content_tag :time, datetime: day.to_s, class: year_view_time_classes(@date, day) do %>
                <%= day.day %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </section>
  </div>
</div>
