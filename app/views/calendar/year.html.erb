<%= turbo_frame_tag :calendar do %>
  <header class="flex items-center justify-between border-b border-gray-200 px-6 py-4">
    <h1 class="text-base font-semibold leading-6 text-gray-900">
      <time datetime="<%= @date.year %>"><%= @date.year %></time>
    </h1>
    <div class="relative flex items-center rounded-md bg-white shadow-sm md:items-stretch">
      <%= link_to calendar_year_path(date: @date - 1.year), method: :get, class: "flex h-9 w-12 items-center justify-center rounded-l-md border-y border-l border-gray-300 pr-1 text-gray-400 hover:text-gray-500 focus:relative md:w-9 md:pr-0 md:hover:bg-gray-50" do %>
        <span class="sr-only">Previous year</span>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd"></path>
        </svg>
      <% end %>
      <%= button_to "Today", calendar_year_path(date: Date.today), method: :get, class: "hidden border-y border-gray-300 px-3.5 h-full text-sm font-semibold text-gray-900 hover:bg-gray-50 focus:relative md:block" %>
      <span class="relative -mx-px h-5 w-px bg-gray-300 md:hidden"></span>
      <%= link_to calendar_year_path(date: @date.next_year), method: :get, class: "flex h-9 w-12 items-center justify-center rounded-r-md border-y border-r border-gray-300 pl-1 text-gray-400 hover:text-gray-500 focus:relative md:w-9 md:pl-0 md:hover:bg-gray-50" do %>
        <span class="sr-only">Previous year</span>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"></path>
        </svg>
      <% end %>
    </div>
  </header>
  <div class="bg-white">
    <div class="mx-auto grid max-w-3xl grid-cols-1 gap-x-8 gap-y-8 px-4 py-8 sm:grid-cols-2 sm:px-6 xl:max-w-none xl:grid-cols-3 xl:px-8 2xl:grid-cols-4">
      <% 1.upto(12) do |i| %>
        <%= compact_month_calendar(date: Date.parse("#{@date.year}-#{i}-01"), navigation: false, events: @events) %>
      <% end %>
    </div>
  </div>
<% end %>